<Window x:Class="GewaechshausMitAnimation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GewaechshausMitAnimation"
        mc:Ignorable="d"
        Title="Gewächshaus-Automation" Height="800" Width="1500" Background="DarkRed" Cursor="Hand">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition>

            </RowDefinition>
            <RowDefinition Height="300">
            </RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition>

            </ColumnDefinition>
            <ColumnDefinition>

            </ColumnDefinition>

        </Grid.ColumnDefinitions>
        <Image x:Name="GewaechshausSkizze" HorizontalAlignment="Right" Height="387" VerticalAlignment="Bottom" Width="554" Source="/gewaechshausSkizze.jpg" Cursor="Hand" Opacity="0.85"/>
        <Image x:Name="GewaechshausInnen" Grid.Column="1" HorizontalAlignment="Left" Height="387" VerticalAlignment="bottom" Width="660" Source="/gewaechshausInnen.jpg" Cursor="Hand" Opacity="0.85"/>
        <Label Content="        GEWÄCHSHAUS STEUERUNG" HorizontalAlignment="left" Margin="492,10,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Width="548" Height="50" Cursor="Hand" FontFamily="MV Boli" FontSize="24" Foreground="#FFC6D019" FontWeight="Bold"/>
        <Slider x:Name="TempSliderOutdoor" Minimum="-20" Maximum="100" HorizontalAlignment="Center" Margin="0,87,0,0" Grid.Row="1" VerticalAlignment="Top" Width="500" Height="25" ValueChanged="TempSliderOutdoor_ValueChanged"/>
        <Slider x:Name="TempSliderIndoor" Grid.Column="1" HorizontalAlignment="Center" Margin="0,87,0,0" Grid.Row="1" VerticalAlignment="Top" Width="500" Height="25" ValueChanged="TempSliderIndoor_ValueChanged"/>
        <Label Content="Außentemperatur festlegen" HorizontalAlignment="Center" Margin="0,27,0,0" Grid.Row="1" VerticalAlignment="Top" Width="500" Height="30" BorderThickness="1,1,1,1" FontSize="16" FontWeight="Bold" Foreground="#FFFFC545" FontFamily="Arial Black" HorizontalContentAlignment="Center"/>
        <Label Content="Innentemperatur festlegen" HorizontalAlignment="Center" Margin="0,27,0,0" Grid.Row="1" VerticalAlignment="Top" Width="500" Height="30" BorderThickness="1,1,1,1" FontSize="16" FontWeight="Bold" Foreground="#FFFFC545" FontFamily="Arial Black" HorizontalContentAlignment="Center" Grid.Column="1"/>
    </Grid>
</Window>
